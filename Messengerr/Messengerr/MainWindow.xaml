<Window x:Class="Messenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="90,0,0,0">
            <TextBox x:Name="UsernameTextBox" Width="200" Height="25" Margin="10" TextChanged="UsernameTextBox_TextChanged"/>
            <TextBlock x:Name="UsernamePlaceholder" Text="Введите имя пользователя" Foreground="Gray" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button Content="Создать чат" Width="200" Height="50" Margin="10" Click="CreateChat_Click"/>
            <TextBox x:Name="IpAddressTextBox" Width="200" Height="25" Margin="10" TextChanged="IpAddressTextBox_TextChanged"/>
            <TextBlock x:Name="IpPlaceholder" Text="Введите IP-адрес" Foreground="Gray" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button Content="Подключиться к чату" Width="200" Height="50" Margin="10" Click="JoinChat_Click"/>
        </StackPanel>
    </Grid>
</Window>
