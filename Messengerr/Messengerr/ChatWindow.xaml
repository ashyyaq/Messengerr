<Window x:Class="Messenger.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="10">
            <ListBox x:Name="ChatListBox" Height="200"/>
            <TextBox x:Name="MessageTextBox" Height="50"/>
            <Button x:Name="SendButton" Content="Отправить" Height="30" Click="SendButton_Click"/>
            <Button x:Name="ExitButton" Content="Выход" Height="30" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
